@model Gerenciador.Web.UI.Models.TaskViewModel

@{
    ViewBag.Title = "Create";
}

<section class="content">

    <div class="row">                        
        <!-- column -->
        <div class="col-md-10 col-md-offset-1">
            <!-- general form elements disabled -->
            <div class="box box-warning">
                <div class="box-header">
                    <h3 class="box-title">Criar Task</h3>
                </div><!-- /.box-header -->
                <div class="box-body">                    
                    @using (Html.BeginForm("Create", "Task", FormMethod.Post, new { @class = "" })) {
                        
                        <!-- text input -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control input-lg", placeholder = "Digite um nome..." })                            
                        </div>
                        <!-- textarea -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description)
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control input-lg", placeholder = "Digite uma descrição de até 240 caracteres", rows = 3 })
                        </div>
                        
                        <div class="form-group input-daterange input-group" id="datepicker">
                            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control input-lg", placeholder="Data de Início" })
                            <span class="input-group-addon">Até</span>
                            @Html.TextBoxFor(model => model.Deadline, new { @class = "form-control input-lg", placeholder="Data Fim" })
                        </div>
                        
                        @Html.HiddenFor(m => m.ProjectId, new { Value = ViewBag.ProjectId })
                        <p>
                            <input type="submit" id="teste" value="Criar" class="btn btn-lg btn-primary" />
                        </p>
                    }
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!--/.col -->
    </div>   <!-- /.row -->

</section><!-- /.content --> 


<div>
    @Html.ActionLink("Voltar", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("#StartDate").datepicker({
                language: "pt-BR",
                format: 'dd/mm/yyyy',
                multidate: false,
                todayHighlight: true,
                autoclose: true
            });
            $("#Deadline").datepicker({
                language: "pt-BR",
                format: 'dd/mm/yyyy',
                multidate: false,
                todayHighlight: true,
                autoclose: true
            });
        });
    </script>
}
