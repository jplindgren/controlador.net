@model IEnumerable<Gerenciador.Domain.Snapshot.EventSnapshot>

<p class="lead">Timeline</p>
<div class="col-md-12">
    <!-- The time line -->
    <ul class="timeline">
        @foreach (var item in Model) { 
            <!-- timeline time label -->
            <li class="time-label">
                <span class="bg-red">
                    @item.EventDate.ToShortDateString()
                </span>
            </li>
            <!-- /.timeline-label -->
            <!-- timeline item -->
            <li>
                <i class="fa fa-comments-o bg-yellow"></i>
                <div class="timeline-item">
                    <span class="time"><i class="fa fa-clock-o"></i> @item.EventDate.ToShortTimeString()</span>
                    <h3 class="timeline-header">@item.Author commented in the task</h3>
                    <div class="timeline-body">
                        @Html.DisplayFor(x => item.Subject)
                    </div>
                </div>
            </li>
            <!-- END timeline item -->    
        }
    </ul>
</div><!-- /.col -->



